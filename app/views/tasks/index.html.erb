<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
       <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
      <% end %>
    </tbody>
    </table>
  <div>
   <%= paginate @tasks %>
  </div>
<% end %>
<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>